FROM dsegura97/nginxx

RUN apt install -yq --no-install-recommends \
    nodejs \
    npm

RUN mkdir -p /root/admin/node
RUN mkdir -p /root/admin/node/proyectos/pokeapi
WORKDIR /root/admin/node
COPY ./proyecto/practica_navyhookPOKEAPI/ /root/admin/node/proyectos/pokeapi

COPY ./dockerfiles/node/admin/start.sh .
RUN chmod +x /root/admin/node/start.sh

ENTRYPOINT [ "./start.sh" ]